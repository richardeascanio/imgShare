<div class="col-md-10 mx-auto">
    <div class="card">
        <div class="card-header bg-dark text-white">
            <h2><i class="fas fa-user-circle"></i> Profile</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-5">
                    <img src="http://gravatar.com/avatar/{{user.profilePic}}?d=monsterid&s=45"
                        alt="Profile pic" class="w-100 h-100 img-thumbnail">
                </div>
                <div class="col-6 ml-4 p-4">
                    <h2>{{user.name}}</h2>
                    <h5><i class="far fa-user"></i> {{user.username}}</h5>
                    <h5><i class="fas fa-at"></i> {{user.email}}</h5>
                    <h4 class="mt-4">Stats:</h4>
                    <h5>Images: pics</h5>
                    <h5>Comments: comments</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="card mt-2">
        <div class="card-header bg-dark text-white">
            <h3><i class="far fa-images"></i> Your images</h3>
        </div>
        <div class="card-body">
            <div class="row">
                {{#each images}}
                    <div class="col-md-4 mb-2">
                        <a href="/images/{{uniqueId}}">
                            <img class="w-100 h-100 img-thumbnail" src="{{imageUrl}}">
                        </a>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>