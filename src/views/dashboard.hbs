<div class="card">
    <div class="card-header text-white bg-dark d-flex justify-content-between align-items-center">
        <h3 class="card-title"><i class="fas fa-tachometer-alt"></i> Dashboard</h3>
        <a href="/add" class="btn btn-success">
            <i class="fas fa-plus"></i> Add a pic
        </a>
    </div>
</div>
{{#each images}}
    <div class="card mt-3">
        <div class="card-header text-white bg-dark d-flex justify-content-between align-items-center">
            <h4 clas="card-title">{{title}}</h4>
            <a href="/images/{{uniqueId}}" class="btn btn-outline-light">
                <i class="fas fa-info"></i> Details
            </a>
        </div>
        <div class="card-body">
            <div class="text-center">
                <img src="{{imageUrl}}" class="w-70 h-70 img-thumbnail">
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            <p>
                <span class="likes-count">{{likes}}</span>
                <i class="fas fa-heart"></i>
            </p>
            <p>
                <i class="fas fa-eye"></i> {{views}}
            </p>
            <p>
                <i class="far fa-clock"></i>
                {{timeago timestamp}}
            </p>
        </div>
    </div>
{{/each}}